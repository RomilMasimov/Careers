@model MeasurmentViewModel

<div class="container mt-5">
    <h1>Add measurment</h1>
    <form asp-action="Measurments" asp-controller="Editor" asp-area="AdminPanel" method="post">
        <div class="form-group">
            <label for="textAz">Text AZ</label>
            <input asp-for="TextAZ" class="form-control" data-input id="textAz" required>
        </div>
        <div class="form-group">
            <label for="textRu">Text RU</label>
            <input asp-for="TextRU" class="form-control" data-input id="textRu" required>
        </div>
        <button type="submit" id="submitForm" class="btn btn-primary">Add</button>
    </form>

    <ul class="mt-3 list-group">
        @foreach (var item in Model.Measurements)
        {
            <li class="list-group-item">@item.TextAZ - @item.TextRU</li>
        }
    </ul>
</div>
