@model ContactsViewModel
@{
    ViewData["Title"] = "Edit contacts";
}

<div class="jp_tittle_main_wrapper">
    <div class="jp_tittle_img_overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="jp_tittle_heading_wrapper">
                    <div class="jp_tittle_heading">
                        <h2>Edit contacts</h2>
                    </div>
                    <div class="jp_tittle_breadcrumb_main_wrapper">
                        <div class="jp_tittle_breadcrumb_wrapper">
                            <ul>
                                <li><a asp-area="Specialist" asp-controller="Settings" asp-action="Index">Settings</a> <i class="fa fa-angle-right"></i></li>
                                <li>Edit contacts</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="jp_adp_main_section_wrapper">
    <div class="container">
        <div class="row">
            <form asp-area="Specialist" asp-controller="Settings" asp-action="EditContacts" method="post" class="col-12">
                <div class="jp_adp_form_wrapper">
                    <input asp-for="Name" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="jp_adp_form_wrapper">
                    <input asp-for="Surname" placeholder="Surname">
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="jp_adp_form_wrapper">
                    <input asp-for="Fathername" placeholder="Fathername">
                    <span asp-validation-for="Fathername" class="text-danger"></span>
                </div>
                <div class="jp_adp_form_wrapper">
                    <input asp-for="PhoneNumber" placeholder="Phone number">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="jp_adp_form_wrapper">
                    <input asp-for="Email" placeholder="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="jp_adp_form_wrapper">
                    <button class="btn btn-success" type="submit">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
