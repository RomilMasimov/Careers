@model EducationAndExperienceViewModel
@{
    ViewData["Title"] = "Educations and experience";
}

<div class="jp_tittle_main_wrapper">
    <div class="jp_tittle_img_overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="jp_tittle_heading_wrapper">
                    <div class="jp_tittle_heading">
                        <h2>Education and experience</h2>
                        <p class="text-muted mb-1">Tell us about your education, experience and achievements. So customers will make sure that you are a real specialist.</p>
                    </div>
                    <div class="jp_tittle_breadcrumb_main_wrapper">
                        <div class="jp_tittle_breadcrumb_wrapper">
                            <ul>
                                <li><a asp-area="Specialist" asp-controller="Profile" asp-action="Index">Profile</a> <i class="fa fa-angle-right"></i></li>
                                <li>Educations and experience</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="jp_adp_main_section_wrapper">
    <div class="container">
        <div class="row">
            @if (TempData.ContainsKey("Status"))
            {
                <div class="alert alert-info w-100" role="alert">
                    @TempData["Status"]
                </div>
            }

            <div class="jp_adp_form_heading_wrapper col-12">
                <div class="d-flex align-items-center">
                    <h2>Education</h2>
                    <a asp-area="Specialist" asp-controller="Profile" asp-action="AddEducation" class="btn btn-light ml-2"><i class="fa fa-plus-circle"></i> Add</a>
                </div>
            </div>

            @if (Model.Educations?.Count() > 0)
            {
                <ul class="list-group list-group-flush col-12 my-2">
                    @foreach (var item in Model.Educations)
                    {
                        <li class="list-group-item">
                            <div class="row">
                                <p class="col-md-8 my-auto">@item.StudyPlaceName (@item.StartDate.ToShortDateString()@(item.EndDate.HasValue ? $" - {item.EndDate?.ToShortDateString()}" : ""))</p>
                                <a asp-area="Specialist" asp-controller="Profile" asp-action="EditEducation" asp-route-id="@item.Id" class="btn btn-light col-md-2">Edit</a>
                                <form asp-area="Specialist" asp-controller="Profile" asp-action="DeleteEducation" asp-route-id="@item.Id" class="col-md-2" method="post">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </li>
                    }
                </ul>
            }

            <div class="jp_adp_form_heading_wrapper col-12 mt-5">
                <div class="d-flex align-items-center">
                    <h2>Experience</h2>
                    <a asp-area="Specialist" asp-controller="Profile" asp-action="AddExperience" class="btn btn-light ml-2"><i class="fa fa-plus-circle"></i> Add</a>
                </div>
            </div>

            @if (Model.Experiences?.Count() > 0)
            {
                <ul class="list-group list-group-flush col-12 my-2">
                    @foreach (var item in Model.Experiences)
                    {
                        <li class="list-group-item">
                            <div class="row">
                                <p class="col-md-8 my-auto">@item.CompanyName (@item.StartDate.ToShortDateString()@(item.EndDate.HasValue ? $" - {item.EndDate?.ToShortDateString()}" : ""))</p>
                                <a asp-area="Specialist" asp-controller="Profile" asp-action="EditExperience" asp-route-id="@item.Id" class="btn btn-light col-md-2">Edit</a>
                                <form asp-area="Specialist" asp-controller="Profile" asp-action="DeleteExperience" asp-route-id="@item.Id" class="col-md-2" method="post">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
</div>