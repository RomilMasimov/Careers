@model EducationAndExperienceViewModel
@{ 
    ViewData["Title"] = "Educations and experience";
}

<div class="jp_tittle_main_wrapper">
    <div class="jp_tittle_img_overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="jp_tittle_heading_wrapper">
                    <div class="jp_tittle_heading">
                        <h2>Education and experience</h2>
                        <p class="text-muted mb-1">Tell us about your education, experience and achievements. So customers will make sure that you are a real specialist.</p>
                    </div>
                    <div class="jp_tittle_breadcrumb_main_wrapper">
                        <div class="jp_tittle_breadcrumb_wrapper">
                            <ul>
                                <li><a asp-area="Specialist" asp-controller="Profile" asp-action="Index">Profile</a> <i class="fa fa-angle-right"></i></li>
                                <li>Educations and experience</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="jp_adp_main_section_wrapper">
    <div class="container">
        <div class="row">
            @if (TempData.ContainsKey("Status"))
            {
                <div class="alert alert-info w-100" role="alert">
                    @TempData["Status"]
                </div>
            }
            <div class="jp_adp_form_heading_wrapper">
                <h2>Education</h2>
            </div>
            <a asp-area="Specialist" asp-controller="Profile" asp-action="AddEducation" class="btn btn-light"><i class="fa fa-plus-circle"></i> Add</a>


            @if (Model.Educations?.Count() > 0)
            {
                @foreach (var item in Model.Educations)
                {
                    <div class="row">
                        <p class="col-8 my-auto">@item.StudyPlaceName (@item.StartDate.ToShortDateString() - @item.EndDate?.ToShortDateString())</p>
                        <div class="col-4">
                            <div class="row">
                                <a asp-area="Specialist" asp-controller="Profile" asp-action="EditEducation" asp-route-id="@item.Id" class="btn btn-light col-md-6">Edit</a>
                                <form asp-area="Specialist" asp-controller="Profile" asp-action="DeleteEducation" asp-route-id="@item.Id" class="col-md-6" method="post">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            }

            <div class="jp_adp_form_heading_wrapper mt-4">
                <h2>Experience</h2>
            </div>
            <a asp-area="Specialist" asp-controller="Profile" asp-action="AddExperience" class="btn btn-light"><i class="fa fa-plus-circle"></i> Add</a>

            @if (Model.Experiences?.Count() > 0)
            {
                <table class="table">
                    <tbody>
                        @foreach (var item in Model.Experiences)
                        {
                            <tr>
                                <th>@item.CompanyName (@item.StartDate.ToShortDateString() - @item.EndDate?.ToShortDateString())</th>
                                <th class="text-left">
                                    <div class="row">
                                        <a asp-area="Specialist" asp-controller="Profile" asp-action="EditExperience" asp-route-id="@item.Id" class="btn btn-light col-md-6">Edit</a>
                                        <form asp-area="Specialist" asp-controller="Profile" asp-action="DeleteExperience" asp-route-id="@item.Id" class="col-md-6" method="post">
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </div>
                                </th>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>