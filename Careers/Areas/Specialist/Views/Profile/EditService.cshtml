@model EditSpecialistServiceViewModel

@{
    ViewData["Title"] = "Edit service";
}

<div class="jp_tittle_main_wrapper">
    <div class="jp_tittle_img_overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="jp_tittle_heading_wrapper">
                    <div class="jp_tittle_heading">
                        <h2>@Model.ServiceDescription</h2>
                    </div>
                    <div class="jp_tittle_breadcrumb_main_wrapper">
                        <div class="jp_tittle_breadcrumb_wrapper">
                            <ul>
                                <li><a asp-area="Specialist" asp-controller="Profile" asp-action="Index">Profile</a> <i class="fa fa-angle-right"></i></li>
                                <li>Edit services <i class="fa fa-angle-right"></i></li>
                                <li>@Model.ServiceDescription</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="jp_adp_main_section_wrapper">
    <div class="container">
        <div class="row">
            <form asp-area="Specialist" asp-controller="Profile" asp-action="EditService" method="post" class="col-12">
                <input asp-for="ServiceId" hidden />
                <input asp-for="SpecialistId" hidden />
                <div class="form-row">
                    <div class="jp_adp_form_wrapper col-md-4 col-12">
                        <input asp-for="PriceMin" placeholder="Price min">
                        <span asp-validation-for="PriceMin" class="text-danger"></span>
                    </div>
                    <div class="jp_adp_form_wrapper col-md-4  col-12">
                        <input asp-for="PriceMax" placeholder="Price max">
                        <span asp-validation-for="PriceMax" class="text-danger"></span>
                    </div>
                    <div class="jp_adp_form_wrapper col-md-4  col-12">
                        <select asp-for="MeasureId" asp-items="@ViewBag.Measurements" class="form-control"></select>
                        <span asp-validation-for="MeasureId" class="text-danger"></span>
                    </div>
                </div>
                @*<div class="form-group">
                        <label asp-for="PriceMin"></label>
                        <input asp-for="PriceMin" class="form-control" />
                        <span asp-validation-for="PriceMin" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PriceMax"></label>
                        <input asp-for="PriceMax" class="form-control" />
                        <span asp-validation-for="PriceMax" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Select measurement</label>
                        <select asp-for="MeasureId" asp-items="@ViewBag.Measurements" class="form-control"></select>
                        <span asp-validation-for="MeasureId" class="text-danger"></span>
                    </div>*@
                <div class="jp_adp_form_wrapper">
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
