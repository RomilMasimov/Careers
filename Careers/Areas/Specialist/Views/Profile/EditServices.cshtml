@model IEnumerable<EditServiceViewModel>
@{
    ViewData["Title"] = "Edit services";
}

<div class="jp_tittle_main_wrapper">
    <div class="jp_tittle_img_overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="jp_tittle_heading_wrapper">
                    <div class="jp_tittle_heading">
                        <h2>Edit services</h2>
                    </div>
                    <div class="jp_tittle_breadcrumb_main_wrapper">
                        <div class="jp_tittle_breadcrumb_wrapper">
                            <ul>
                                <li><a asp-area="Specialist" asp-controller="Profile" asp-action="Index">Profile</a> <i class="fa fa-angle-right"></i></li>
                                <li>Edit services</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="jp_adp_main_section_wrapper">
    <div class="container">
        <div class="row">
            <ul class="list-group list-group-flush col-12">
                @foreach (var viewModel in Model)
                {
                    <li class="list-group-item">
                        <div class="d-flex justify-content-between">
                            <p>@viewModel.Service.DescriptionRU</p>
                            @if (viewModel.SpecialistService != null)
                            {
                                @if (viewModel.SpecialistService?.PriceMax != null)
                                {
                                    <span>@viewModel.SpecialistService.PriceMin - @viewModel.SpecialistService?.PriceMax @viewModel.SpecialistService.Measure.TextRU</span>
                                }
                                <span>@viewModel.SpecialistService.PriceMin @viewModel.SpecialistService.Measure.TextRU</span>
                            }
                            <a asp-area="Specialist" asp-controller="Profile" asp-action="EditService" asp-route-serviceId="@viewModel.Service.Id" class="btn btn-sm btn-light">Edit</a>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>