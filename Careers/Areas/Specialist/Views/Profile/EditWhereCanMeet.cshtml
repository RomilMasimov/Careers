@{
    ViewData["Title"] = "Edit where can meet";
}

<div class="jp_tittle_main_wrapper">
    <div class="jp_tittle_img_overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="jp_tittle_heading_wrapper">
                    <div class="jp_tittle_heading">
                        <h2>Edit where can meet</h2>
                    </div>
                    <div class="jp_tittle_breadcrumb_main_wrapper">
                        <div class="jp_tittle_breadcrumb_wrapper">
                            <ul>
                                <li><a asp-area="Specialist" asp-controller="Profile" asp-action="Index">Profile</a> <i class="fa fa-angle-right"></i></li>
                                <li>Edit where can meet</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="jp_adp_main_section_wrapper">
    <div class="container">
        <div class="row">
            <form asp-area="Specialist" asp-controller="Profile" asp-action="EditWhereCanMeet" method="post" class="col-12">
                <div class="form-group">
                    @*<label>Points:</label>*@
                    <select name="points" asp-items="@ViewBag.Points"
                            data-placeholder="Choose meeting points..."
                            multiple id="points"
                            class="form-control chosen-select">
                    </select>
                </div>
                <div class="form-group">
                    <button class="jp_btn_default" type="submit">@Localizer["save"]</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/chosen/chosen.jquery.min.js"></script>
    <script>
        $('#points').chosen();
    </script>
}
