@model ExperienceViewModel
@{
    ViewData["Title"] = "Edit experience";
}

<div class="jp_tittle_main_wrapper">
    <div class="jp_tittle_img_overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="jp_tittle_heading_wrapper">
                    <div class="jp_tittle_heading">
                        <h2>Edit experience</h2>
                    </div>
                    <div class="jp_tittle_breadcrumb_main_wrapper">
                        <div class="jp_tittle_breadcrumb_wrapper">
                            <ul>
                                <li><a asp-area="Specialist" asp-controller="Profile" asp-action="Index">Profile</a> <i class="fa fa-angle-right"></i></li>
                                <li><a asp-area="Specialist" asp-controller="Profile" asp-action="EducationsAndExperience">Educations and experience</a> <i class="fa fa-angle-right"></i></li>
                                <li>Edit experience</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="jp_adp_main_section_wrapper">
    <div class="container">
        <div class="row">
            <form asp-area="Specialist" asp-controller="Profile" asp-action="EditExperience" method="post" class="col-12">
                <input asp-for="Id" hidden />
                <div class="jp_adp_form_wrapper">
                    <input asp-for="CompanyName" placeholder="Company name">
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>
                <div class="jp_adp_form_wrapper">
                    <input asp-for="Position" placeholder="Position">
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <div class="jp_adp_form_wrapper col-md-6">
                        <input asp-for="StartDate" placeholder="Start date">
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="jp_adp_form_wrapper col-md-6">
                        <input asp-for="EndDate" placeholder="End date">
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="jp_adp_form_wrapper">
                    <button class="btn btn-success" type="submit">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}