@model UploadWorkViewModel

<h2>New image</h2>

<form asp-area="Specialist" asp-controller="Profile" asp-action="UploadWork" method="post" enctype="multipart/form-data" class="m-2">
    <div class="custom-file">
        <input name="Image" type="file" class="custom-file-input" id="inputFile">
        <label class="custom-file-label" for="inputFile">Choose file</label>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button class="btn btn-success" type="submit">Upload</button>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}