@model EditAdditionallyViewModel
@{
    ViewData["Title"] = "Edit additionally";
}

<div class="jp_tittle_main_wrapper">
    <div class="jp_tittle_img_overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="jp_tittle_heading_wrapper">
                    <div class="jp_tittle_heading">
                        <h2>@SharedLocalizer["additionally"]</h2>
                    </div>
                    <div class="jp_tittle_breadcrumb_main_wrapper">
                        <div class="jp_tittle_breadcrumb_wrapper">
                            <ul>
                                <li><a asp-area="SpecialistArea" asp-controller="Settings" asp-action="Index">@SharedLocalizer["settings"]</a> <i class="fa fa-angle-right"></i></li>
                                <li>@SharedLocalizer["additionally"]</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="jp_adp_main_section_wrapper">
    <div class="container">
        <div class="row">
            <form asp-area="SpecialistArea" asp-controller="Settings" asp-action="EditAdditionally" method="post" class="col-12">
                <div class="jp_adp_form_wrapper">
                    <input asp-for="Birthday" placeholder="@SharedLocalizer["birthday"]">
                    <span asp-validation-for="Birthday" class="text-danger"></span>
                </div>
                <div class="jp_adp_form_wrapper">
                    <button class="jp_btn_default" type="submit">@SharedLocalizer["save"]</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
