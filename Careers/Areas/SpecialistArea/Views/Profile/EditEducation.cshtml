@model EducationViewModel
@{
    ViewData["Title"] = "Edit education";
}

<div class="jp_tittle_main_wrapper">
    <div class="jp_tittle_img_overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="jp_tittle_heading_wrapper">
                    <div class="jp_tittle_heading">
                        <h2>Edit education</h2>
                    </div>
                    <div class="jp_tittle_breadcrumb_main_wrapper">
                        <div class="jp_tittle_breadcrumb_wrapper">
                            <ul>
                                <li><a asp-area="SpecialistArea" asp-controller="Profile" asp-action="Index">Profile</a> <i class="fa fa-angle-right"></i></li>
                                <li><a asp-area="SpecialistArea" asp-controller="Profile" asp-action="EducationsAndExperience">Educations and experience</a> <i class="fa fa-angle-right"></i></li>
                                <li>Edit education</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="jp_adp_main_section_wrapper">
    <div class="container">
        <div class="row">
            <form asp-area="SpecialistArea" asp-controller="Profile" asp-action="EditEducation" method="post" class="col-12">
                <input asp-for="Id" hidden />
                <div class="jp_adp_form_wrapper">
                    <input asp-for="StudyPlaceName" placeholder="Study place name">
                    <span asp-validation-for="StudyPlaceName" class="text-danger"></span>
                </div>
                <div class="jp_adp_form_wrapper">
                    <input asp-for="Specialization" placeholder="Specialization">
                    <span asp-validation-for="Specialization" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <div class="jp_adp_form_wrapper col-md-6">
                        <input asp-for="StartDate" placeholder="Start date">
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="jp_adp_form_wrapper col-md-6">
                        <input asp-for="EndDate" placeholder="End date">
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2 ">
                        <div class="mt-4 ml-2">
                            <input id="till-now-checkbox" type="checkbox" @(Model.EndDate == null ? "":"checked")> &ensp;
                            <span>Still studying</span>
                        </div>
                    </div>
                </div>
                <div class="jp_adp_form_wrapper">
                    <button class="jp_btn_default" type="submit">@SharedLocalizer["save"]</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
    <script>

        $('#till-now-checkbox').change(function () {
            if (this.checked) {
                $('#endDate').prop('disabled', true);
            }
            else {
                $('#endDate').prop('disabled', false);
            }

        });

    </script>
}
