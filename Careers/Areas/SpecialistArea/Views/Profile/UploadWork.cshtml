@model UploadWorkViewModel
@{
    ViewData["Title"] = "Upload work";
}

<div class="jp_tittle_main_wrapper">
    <div class="jp_tittle_img_overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="jp_tittle_heading_wrapper">
                    <div class="jp_tittle_heading">
                        <h2>@SharedLocalizer["works"]</h2>
                        <p>@SharedLocalizer["imagesDescription"]</p>
                    </div>
                    <div class="jp_tittle_breadcrumb_main_wrapper">
                        <div class="jp_tittle_breadcrumb_wrapper">
                            <ul>
                                <li><a asp-area="SpecialistArea" asp-controller="Profile" asp-action="Index">@SharedLocalizer["profile"]</a> <i class="fa fa-angle-right"></i></li>
                                <li><a asp-area="SpecialistArea" asp-controller="Profile" asp-action="Works">@SharedLocalizer["works"]</a> <i class="fa fa-angle-right"></i></li>
                                <li>@SharedLocalizer["uploadWork"]</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="jp_adp_main_section_wrapper">
    <div class="container">
        <div class="row">
            <form asp-area="SpecialistArea" asp-controller="Profile" asp-action="UploadWork" method="post" enctype="multipart/form-data" class="col-12">
                <div class="jp_adp_choose_resume form-group">
                    <div class="custom-input">
                        <span><i class="fa fa-upload"></i> &nbsp;@SharedLocalizer["upload"] @SharedLocalizer["image"]</span>
                        <input name="Image" type="file" />
                    </div>
                </div>
                <div class="form-group">
                    <textarea asp-for="Description" class="jp_textarea_default" rows="7" placeholder="@SharedLocalizer["description"]"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <button class="jp_btn_default" type="submit">@SharedLocalizer["upload"]</button>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
