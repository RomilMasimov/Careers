@model EditSpecialistServiceViewModel

@{
    ViewData["Title"] = "Edit service";
}

<div class="jp_tittle_main_wrapper">
    <div class="jp_tittle_img_overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="jp_tittle_heading_wrapper">
                    <div class="jp_tittle_heading">
                        <h2>@Model.ServiceDescription</h2>
                    </div>
                    <div class="jp_tittle_breadcrumb_main_wrapper">
                        <div class="jp_tittle_breadcrumb_wrapper">
                            <ul>
                                <li><a asp-area="SpecialistArea" asp-controller="Profile" asp-action="Index">@SharedLocalizer["profile"]</a> <i class="fa fa-angle-right"></i></li>
                                <li><a asp-area="SpecialistArea" asp-controller="Profile" asp-action="EditServices" asp-route-subCategoryId="@Model.SubCategoryId">@SharedLocalizer["editServices"] </a><i class="fa fa-angle-right"></i></li>
                                <li>@Model.ServiceDescription</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="jp_adp_main_section_wrapper">
    <div class="container">
        <div class="row">
            <form asp-area="SpecialistArea" asp-controller="Profile" asp-action="EditService" method="post" class="col-12">
                <input asp-for="ServiceId" hidden />
                <input asp-for="SpecialistId" hidden />
                <div class="form-group form-row">
                    <div class="jp_adp_form_wrapper col-lg-4 col-12">
                        <input asp-for="PriceMin" placeholder="@SharedLocalizer["priceMin"]">
                        <span asp-validation-for="PriceMin" class="text-danger"></span>
                    </div>
                    <div class="jp_adp_form_wrapper col-lg-4  col-12">
                        <input asp-for="PriceMax" placeholder="@SharedLocalizer["priceMax"]">
                        <span asp-validation-for="PriceMax" class="text-danger"></span>
                    </div>
                    <div class="jp_adp_form_wrapper col-lg-4  col-12">
                        <select asp-for="MeasurementId" asp-items="@ViewBag.Measurements" class="form-control"></select>
                        <span asp-validation-for="MeasurementId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <button class="jp_btn_default" type="submit">@SharedLocalizer["save"]</button>
                    <a asp-area="SpecialistArea" 
                       asp-controller="Profile" 
                       asp-action="RemoveService" 
                       asp-route-id="@Model.ServiceId" 
                       class="jp_btn_default ml-3">@SharedLocalizer["delete"]</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
