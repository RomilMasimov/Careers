@model IEnumerable<OrderViewModel>

<div class="jp_tittle_main_wrapper">
    <div class="jp_tittle_img_overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="jp_tittle_heading_wrapper">
                    <div class="jp_tittle_heading">
                        <h2>@SharedLocalizer["myResponses"]</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="jp_adp_main_section_wrapper">
    <div class="container">
        <partial name="_MyOrdersTabNavigation" />
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="tab-content">
                    <div id="list" class="tab-pane fade active in">
                        <div class="row">
                            @if (Model.Any())
                            {
                                @foreach (var order in Model)
                                {
                                    <partial name="_OrderPartial" model="order" />
                                }
                            }
                            else
                            {
                                <div class="w-100 mt-5 d-flex flex-column align-items-center justify-content-center">
                                    <h2 class="header">@SharedLocalizer["noorderstext"]</h2>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>