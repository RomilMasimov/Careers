@model Question

<div class="jp_adp_form_wrapper">
    <p>@(ViewBag.isRu ? Model.TextRU : Model.TextAZ)</p>
    @foreach (var answer in Model.Answers)
    {
        <input name="answer" type="radio" value="@answer.Id" class="w-auto h-auto" /> @(ViewBag.isRu ? answer.TextRU : answer.TextAZ)<br>
    }
</div>