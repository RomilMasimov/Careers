@using System.Globalization
@model Question

<div class="jp_adp_form_wrapper @Model.Id">
    @if (CultureInfo.CurrentCulture.Name == "ru-RU")
    {
        <p>@Model.TextRU</p>

        foreach (var answer in Model.Answers)
        {
            <input name="answer-@Model.Id" type="radio" value="@answer.Id" class="w-auto h-auto">

            @answer.TextRU

            <br>
        }
    }
    else
    {
        <p>@Model.TextAZ</p>

        foreach (var answer in Model.Answers)
        {
            <input name="answer-@Model.Id" type="radio" value="@answer.Id" class="w-auto h-auto">

            @answer.TextAZ

            <br>
        }
    }
</div>