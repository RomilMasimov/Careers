        @if (CultureInfo.CurrentCulture.Name == "ru-RU")
        {<p>@Model.TextRU</p>}
        else
        {<p>@Model.TextAZ</p>}
        <textarea data-question-id="@Model.Id" name="answer" type="text" rows="2"></textarea>
    </div>