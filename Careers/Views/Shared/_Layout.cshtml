    <script>
        if ($('#notificationBell')[0]) {

            const hubConnection = new signalR.HubConnectionBuilder()
                .withUrl("/hubs/messageNotification")
                .withAutomaticReconnect().build();
            hubConnection.serverTimeoutInMilliseconds = 100000;



            hubConnection.on('UploadNotifications', function (data) {
                for (let notifi of data) {
                    addNotification(notifi);
                }
            });

            hubConnection.on('NewMsgCame', function (data) {
                addNotification(data);
            });

            function addNotification(data) {
                $("#notificationBell i").css('color', '#23c0e9');

                let url = '#';

                if (data.role == 'client') {
                    url = `@Url.Action("ReceiveDialogId","Order",new{area="SpecialistArea"})/${data.dialogId}`;
                }
                if (data.role == 'specialist') {
                    url = `@Url.Action("ReceiveDialogId","Order")/${data.dialogId}`;
                }
                console.log(url);
                $('#notifications .list-group').prepend(`<a href="${url}" class="list-group-item list-group-item-action"><i class="far fa-envelope"></i> <p>${data.text}</p></a>`);
            }


            hubConnection.start().then(function () {
                console.log("message notification connected");
            });

            $("#notificationBell").click(function (e) {
                $("#notificationBell i").css('color','white');

                $("#notifications").show();
            });
            $("#notificationBell").blur(function (e) {
                setTimeout(function () {
                    $("#notifications").hide();
                }, 400);
            });
        }
    </script>
