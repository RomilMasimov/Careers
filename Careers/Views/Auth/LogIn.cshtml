@model Careers.ViewModels.Auth.LoginViewModel
@{
    Layout = "_Layout";
}

<!-- jp Tittle Wrapper Start -->
<div class="jp_tittle_main_wrapper">
    <div class="jp_tittle_img_overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="jp_tittle_heading_wrapper">
                    <div class="jp_tittle_heading">
                        <h2>@SharedLocalizer["login"]</h2>
                    </div>
                    <div class="jp_tittle_breadcrumb_main_wrapper">
                        <div class="jp_tittle_breadcrumb_wrapper">
                            <ul>
                                <li><a asp-action="Index" asp-controller="Home">@SharedLocalizer["home"]</a> <i class="fa fa-angle-right"></i></li>
                                <li>@SharedLocalizer["login"]</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- jp Tittle Wrapper End -->
<!-- jp login wrapper start -->
<div class="login_section">
    <!-- login_form_wrapper -->
    <div class="login_form_wrapper">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <!-- login_wrapper -->
                    <h1>@SharedLocalizer["loginDescription"]</h1>
                    <form asp-action="LogIn" asp-controller="Auth" method="post" class="login_wrapper">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="formsix-pos">
                            <div class="form-group i-email">
                                <input asp-for="Login" class="form-control" placeholder="Login*">
                                <span asp-validation-for="Login" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="formsix-e">
                            <div class="form-group i-password">
                                <input asp-for="Password" class="form-control" placeholder="@SharedLocalizer["password"]*">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="login_remember_box">
                            <label class="control control--checkbox">
                                <input asp-for="RememberMe" type="checkbox" class="form-check-input">
                                <label asp-for="RememberMe" class="form-check-label">@SharedLocalizer["rememberMe"]</label>
                            </label>
                            <a asp-controller="Auth" asp-action="ForgotPassword" class="forget_password">
                                @SharedLocalizer["forgotPassword"]
                            </a>
                        </div>
                        <div class="login_btn_wrapper">
                            <button class="btn btn-primary login_btn"> @SharedLocalizer["login"] </button>
                        </div>
                        <div class="login_message">
                            <p>@SharedLocalizer["notRegistered"] <a asp-controller="Auth" asp-action="SignUp"> @SharedLocalizer["signUp"] </a> </p>
                        </div>
                    </form>
                    <p>@SharedLocalizer["loginWarning"]</p>
                    <!-- /.login_wrapper-->
                </div>
            </div>
        </div>
    </div>
    <!-- /.login_form_wrapper-->
</div>
<!-- jp login wrapper end -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}