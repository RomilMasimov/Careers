@model Careers.ViewModels.Auth.RegistrationViewModel
<!-- jp Tittle Wrapper Start -->
<div class="jp_tittle_main_wrapper">
    <div class="jp_tittle_img_overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="jp_tittle_heading_wrapper">
                    <div class="jp_tittle_heading">
                        <h2>Register</h2>
                    </div>
                    <div class="jp_tittle_breadcrumb_main_wrapper">
                        <div class="jp_tittle_breadcrumb_wrapper">
                            <ul>
                                <li><a asp-action="Index" asp-controller="Home">Home</a> <i class="fa fa-angle-right"></i></li>
                                <li>Register</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- jp Tittle Wrapper End -->
<!-- jp register wrapper start -->
<div class="register_section">
    <!-- register_form_wrapper -->
    <div class="register_tab_wrapper">
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <div role="tabpanel">

                        <!-- Nav tabs -->
                        <ul id="tabOne" class="nav register-tabs">
                            <li class="@(Model.IsClient==true?"active":"")">
                                <a id="client" href="#">Client account <br> <span>i am looking for a specialist</span></a>
                            </li>
                            <li class="@(Model.IsClient==false?"active":"")">
                                <a id="specialist" href="#">Specialist account <br> <span>i am looking for a job</span></a>
                            </li>
                        </ul>

                        <!-- Tab panes -->
                        <div id="tab-content" class="tab-content">
                            @if (Model.IsClient == true)
                                {
                                    <partial name="_ClientRegistrationPartial" model="@Model.Client" />
                                }
                                else if (Model.IsClient == false)
                                {
                                    <partial name="_SpecialistRegistrationPartial" model="@Model.Specialist" />
                                }
                        </div>
                        <p class="btm_txt_register_form">In case you are using a public/shared computer we recommend that you logout to prevent any un-authorized access to your account</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>

        $('#specialist').on('click', function(e) {
            event.preventDefault();
            $('#specialist').parent().addClass("active");
            $('#client').parent().removeClass("active");

            fetch('@Url.Action("SpecialistForm", "Auth")')
                .then(response => { return response.text(); })
                .then(result => {
                    $("#tab-content")[0].innerHTML = '';
                    $('#tab-content').append(result);
                });
        });


        $('#client').on('click', function(e) {
            event.preventDefault();
            $('#specialist').parent().removeClass("active");
            $('#client').parent().addClass("active");

            fetch('@Url.Action("ClientForm", "Auth")')
                .then(response => { return response.text(); })
                .then(result => {
                    $("#tab-content")[0].innerHTML = '';
                    $('#tab-content').append(result);
                });
        });


    </script>
}