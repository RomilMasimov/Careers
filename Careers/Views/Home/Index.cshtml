@section Scripts
{
    <script src="~/lib/jqueryui/jquery-ui.min.js"></script>
    <script>
        $("#services").autocomplete({
            source: '/Home/ServicesAndSubCategoriesAutocomplete',
            minLength: 2,
            select: function (event, ui) {
                if (ui.item.type == "service") $("#serviceId").val(ui.item.id);
                else if (ui.item.type == "subcategory") $("#subCategotyId").val(ui.item.id);
            }
        });
        $("#locations").autocomplete({
            source: '/Home/MeetingPointsAutocomplete',
            minLength: 2,
            select: function (event, ui) {
                if (ui.item.type == "meetingpoint") $("#meetingPointId").val(ui.item.id);
            }
        });
    </script>
}